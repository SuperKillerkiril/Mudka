@page "/add-note"
@using Services.Model
@using Services.Services
@inject NoteService NoteService


<MudText Typo="Typo.h2" Style="font-weight: bold" Align="Align.Center">Создание новой заметки</MudText>

<MudTextField T="string" Label="Имя заметки" Variant="Variant.Text" Text="@_note.Name" MaxLength="100" AutoGrow HelperText="Не больше 100 символов" />
<MudTextField T="string" Label="Описание" Variant="Variant.Text" Text="@_note.Description" MaxLength="1000" AutoGrow HelperText="Не больше 1000 символов" />
<MudText Typo="Typo.h4">Важность задачи</MudText>
<MudRating MaxValue="5" SelectedValue="_note.Priority" Color="Color.Primary" Size="Size.Large"/>
<MudSelect T="Services.Enum.Color" Label="Выберете цвет" @bind-Value="_note.Color">
    @foreach (var color in Enum.GetValues(typeof(Color)).Cast<Color>())
    {
        <MudSelectItem Value="@color">@color</MudSelectItem>
    }

</MudSelect>
<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveTask" Class="mt-4">
    Сохранить
</MudButton>



@code {
    private Note _note = new Note();


    private void SaveTask()
    { 
        NoteService.AddUserNote(_note);
    }
}